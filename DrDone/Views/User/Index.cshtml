
@{
    ViewBag.Title = "Index";
}

    <div class="row mt-5">
        <div class="col-4 mx-auto">
            <form class="form-type-1">
                <div class="text-center mb-5 user-pp">
                    <i class="fas fa-user font-size-100"></i>
                </div>
                <div class="form-group">
                    <label for="usernameInput">Kullanıcı Adı</label>
                    <input type="email" class="form-control input" id="usernameInput" aria-describedby="usernameHelp" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <label for="passwordInput">Password</label>
                    <input type="password" class="form-control" id="passwordInput" placeholder="Şifre">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
            </form>
        </div>
    </div>