@model DrDone.ViewModels.AuthLogin
<div class="row ">
    <div class="col-4 mx-auto">
        @using (Html.BeginForm("login", "User", FormMethod.Post, new { @class = "form-type-1" }))
        {
            <form class="form-type-1" method="post">
                <div class="text-center mb-5 user-pp">
                    <i class="fas fa-user font-size-100"></i>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı", autofocus = "autofocus", tabindex = 1 })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parola", tabindex = 1 })
                </div>
                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
            </form>
            if (Model.isSignup)
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <i class="fa fa-check-circle"></i><b>Kayıt Başarılı</b> Lütfen giriş yapınız
                </div>
            }
        }
    </div>
</div>