@model DrDone.ViewModels.AuthLogin
@{
    ViewBag.Title = "Index";
}

<div class="row mt-5">
    <div class="col-4 mx-auto">
        @using (Html.BeginForm("login","User",FormMethod.Post,new { @class="form-type-1"}))
        {
        <form class="form-type-1" method="post">
            <div class="text-center mb-5 user-pp">
                <i class="fas fa-user font-size-100"></i>
            </div>
            <div>
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı", tabindex = 1 })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parola", tabindex = 1 })
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
        </form>
        }
    </div>
</div>