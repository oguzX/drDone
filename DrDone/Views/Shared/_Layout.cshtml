@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <title>DrDone - @ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="OneTech shop project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/css")
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

    @RenderSection("AddToHeadAnotherWay", required: false)
</head>

<body>
    @helper SelectedTabClass(string tabName)
    {

        @ViewBag.SelectedTab

        if (tabName == ViewBag.SelectedTab)
        {
            @:active
        }
    }
    <div class="super_container">

        <!-- Header -->

        <header class="header">

            <!-- Top Bar -->

            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col d-flex flex-row">
                            <div class="top_bar_content ml-auto">
                                <div class="top_bar_user">
                                    <div class="user_icon"><img src="@Url.Content("~/assets/images/user.svg")" alt=""></div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        if (User.IsInRole("admin"))
                                        {
                                            <div>@Html.ActionLink("Panel", "Home", new { controller = "Index", Area = "Admin" }, new { @class = "nav-link" })</div>
                                        }

                                        <div>@Html.ActionLink("Çıkış", "logout", new { controller = "user", area = AreaReference.UseRoot}, new { @class = "nav-link" })</div>
                                    }
                                    else
                                    {
                                        <div>@Html.ActionLink("Giriş", "login", new { controller = "user" }, new { @class = "nav-link" })</div>
                                        <div>@Html.ActionLink("Kaydol", "signup", new { controller = "user" }, new { @class = "nav-link" })</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Header Main -->

            <div class="header_main">
                <div class="container">
                    <div class="row">

                        <!-- Logo -->
                        <div class="col-lg-3 col-sm-5 col-5 order-1">
                            <div class="logo_container">
                                <div class="logo">
                                    <a href="@Url.Action("index","home", new { Area=AreaReference.UseRoot})"><i class='fas fa-shopping-basket'></i> DrDone</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->


            <!-- Menu -->

