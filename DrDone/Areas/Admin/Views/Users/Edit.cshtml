@model DrDone.Areas.Admin.ViewModels.UsersEdit
<h1>@Model.Username kullanıcısını düzenle</h1>
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(f => f.Username)
        @Html.TextBoxFor(f => f.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Email)
        @Html.TextBoxFor(f => f.Email, new { @class = "form-control" })
    </div>
    <input type="submit" value="Güncelle" class="btn btn-primary" />
    <a href="@Url.Action("index")">İptal</a>
}

