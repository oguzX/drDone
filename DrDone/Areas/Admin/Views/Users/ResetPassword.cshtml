@model DrDone.Areas.Admin.ViewModels.UsersResetPassword

@{
    ViewBag.Title = "ResetPassword";
}

<h2>Parola Sıfırla</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
<div class="form-group">
    @Html.LabelFor(f => f.Password)
    @Html.PasswordFor(f => f.Password, new { @class = "form-control" })
</div>
    <input type="submit" value="Şifreyi Değiştir" class="btn btn-primary" />
    <a href="@Url.Action("index")">iptal</a>
}

