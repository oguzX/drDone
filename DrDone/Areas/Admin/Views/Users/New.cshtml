@model DrDone.Areas.Admin.ViewModels.UsersNew

@{
    ViewBag.Title = "New";
}

<h2>New</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(f => f.Username)
        @Html.TextBoxFor(f => f.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Email)
        @Html.TextBoxFor(f => f.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Password)
        @Html.PasswordFor(f => f.Password, new { @class = "form-control" })
    </div>
    <input type="submit" value="Kullanıcıyı Oluştur" class="btn btn-primary"/>
    <a href="@Url.Action("index")">Iptal</a>
}


