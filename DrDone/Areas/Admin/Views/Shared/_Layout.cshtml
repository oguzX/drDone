@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DrDone - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    @helper SelectedTabClass(string tabName)
    {
        if (tabName == ViewBag.SelectedTab)
        {
            @:active
        }
    }
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="nav navbar-nav">
                <li class="nav-item @SelectedTabClass("Home")"><a href="@Url.Action("Home","Index",new { area="admin"})" class="nav-link">Ana Sayfa</a></li>
                <li class="nav-item @SelectedTabClass("About")">@Html.ActionLink("About", "About", "Home")</li>
                <li class="nav-item @SelectedTabClass("Contact")">@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        <div class="row">
            <div class="col-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DrDone  </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
</body>
</html>
